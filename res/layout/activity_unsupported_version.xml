<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="30dp"
    tools:context="co.jijichat.UnsupportedVersionActivity" >

    <TextView
        style="@style/dgts__Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unsupported Version" />

    <TextView
        style="@style/dgts__Terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dgts__margin_bottom"
        android:text="This version of Jijichat is unsupported. Click below to download the latest supported version." />

    <Button
        android:id="@+id/updateButton"
        style="@style/dgts__ButtonText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tw__login_btn_height"
        android:background="@drawable/dgts__digits_btn_default"
        android:text="Download latest version"
        android:textColor="#FFFFFF" />

</LinearLayout>