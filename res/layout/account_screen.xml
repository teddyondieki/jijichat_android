<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="30dp"
    tools:context="co.jijichat.authenticator.AuthenticatorActivity" >

    <TextView
        android:id="@+id/welcomeText"
        style="@style/dgts__Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intializing Jijichat" />

    <TextView
        android:id="@+id/introText"
        style="@style/dgts__Terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dgts__margin_bottom"
        android:text="Jijichat could not log you in. Please try again."
        android:visibility="invisible" />

    <Button
        android:id="@+id/auth_button"
        style="@style/dgts__ButtonText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tw__login_btn_height"
        android:background="@drawable/dgts__digits_btn_default"
        android:text="Try again"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />

</LinearLayout>